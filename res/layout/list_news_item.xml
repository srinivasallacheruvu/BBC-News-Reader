<com.digitallizard.bbcnewsreader.ItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
class="com.digitallizard.bbcnewsreader.ItemLayout"
android:id="@+id/rootNewsItem"
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="center_horizontal"
android:paddingLeft="2dp"
android:paddingRight="2dp"
android:paddingBottom="5dp"
android:onClick="itemClicked">
	<RelativeLayout
	android:layout_width="100dp"
	android:layout_height="wrap_content">	
		<ImageView android:id="@+id/imageNewsItem"
		android:src="@drawable/no_thumb_grey"
		android:layout_width="match_parent"
		android:layout_height="70dp"/>
		<TextView android:id="@+id/textNewsItemTitle"
		android:text="No Title"
		android:maxLines="4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#96202020"
	    android:textSize="12sp"
	    android:textStyle="bold"
	    android:padding="1dp"/>
    </RelativeLayout>
</com.digitallizard.bbcnewsreader.ItemLayout>
